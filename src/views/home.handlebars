<div class="container pb-5"><!-- CABEÇALHO DO DASHBOARD --><div
    class="d-flex justify-content-between align-items-center mb-4"
  ><div><h1 class="h3 mb-0 fw-bold text-dark">Painel de Controlo</h1><p
        class="text-muted mb-0"
      >Gestão centralizada de orçamentos de produtos e serviços.</p></div><a
      href="/new"
      class="btn btn-primary shadow-sm px-4"
    ><i class="bi bi-plus-lg me-2"></i>Novo Orçamento</a></div><!-- CARDS DE ESTATÍSTICAS -->
  <div class="row g-4 mb-5">
    <!-- Total -->
    <div class="col-md-3">
      <div class="card border-0 shadow-sm h-100">
        <div class="card-body">
          <div class="d-flex align-items-center mb-2">
            <div
              class="flex-shrink-0 bg-primary-subtle text-primary p-3 rounded-3"
            >
              <i class="bi bi-file-earmark-text fs-4"></i>
            </div>
            <div class="ms-3">
              <h6
                class="card-subtitle text-muted mb-1 small text-uppercase"
              >Total</h6>
              <h3 class="card-title mb-0 fw-bold">{{stats.totalCount}}</h3>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Pendentes -->
    <div class="col-md-3">
      <div class="card border-0 shadow-sm h-100">
        <div class="card-body">
          <div class="d-flex align-items-center mb-2">
            <div
              class="flex-shrink-0 bg-warning-subtle text-warning p-3 rounded-3"
            >
              <i class="bi bi-clock-history fs-4"></i>
            </div>
            <div class="ms-3">
              <h6
                class="card-subtitle text-muted mb-1 small text-uppercase"
              >Pendentes</h6>
              <h3 class="card-title mb-0 fw-bold">{{stats.pendingCount}}</h3>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Aprovados -->
    <div class="col-md-3">
      <div class="card border-0 shadow-sm h-100">
        <div class="card-body">
          <div class="d-flex align-items-center mb-2">
            <div
              class="flex-shrink-0 bg-success-subtle text-success p-3 rounded-3"
            >
              <i class="bi bi-check2-circle fs-4"></i>
            </div>
            <div class="ms-3">
              <h6
                class="card-subtitle text-muted mb-1 small text-uppercase"
              >Aprovados</h6>
              <h3 class="card-title mb-0 fw-bold">{{stats.approvedCount}}</h3>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Valor Total -->
    <div class="col-md-3">
      <div class="card border-0 shadow-sm h-100 text-white bg-dark">
        <div class="card-body">
          <div class="d-flex align-items-center mb-2">
            <div class="flex-shrink-0 bg-primary p-3 rounded-3 text-white">
              <i class="bi bi-currency-dollar fs-4"></i>
            </div>
            <div class="ms-3">
              <h6
                class="card-subtitle text-light mb-1 small text-uppercase opacity-75"
              >Volume Total</h6>
              <h3
                class="card-title mb-0 fw-bold text-truncate"
                style="max-width: 150px;"
              >
                {{formatCurrency stats.totalValue}}
              </h3>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- TABELA DE ORÇAMENTOS RECENTES -->
  <div class="card border-0 shadow-sm overflow-hidden">
    <div
      class="card-header bg-white py-3 border-bottom d-flex justify-content-between align-items-center"
    >
      <h5 class="card-title mb-0 fw-bold text-dark">Orçamentos Recentes</h5>
      <span class="badge bg-light text-dark border">Últimos 5 registos</span>
    </div>
    <div class="table-responsive">
      <table class="table table-hover align-middle mb-0">
        <thead class="bg-light">
          <tr>
            <th class="ps-4" style="width: 30%">Cliente</th>
            <th>Emissão</th>
            <th>Valor Total</th>
            <th class="text-center">Estado</th>
            <th class="text-end pe-4">Ações</th>
          </tr>
        </thead>
        <tbody>
          {{#each recentBudgets}}
            <tr>
              <td class="ps-4">
                <div class="fw-bold text-dark">{{this.customerName}}</div>
                <small class="text-muted">{{this.customerEmail}}</small>
              </td>
              <td>{{formatDate this.issueDate}}</td>
              <td><span class="fw-bold">{{formatCurrency
                    this.totalAmount
                  }}</span></td>
              <td class="text-center">
                {{#if (eq this.status "Pending")}}
                  <span
                    class="badge rounded-pill bg-warning-subtle text-warning px-3 border border-warning-subtle"
                  >Pendente</span>
                {{else if (eq this.status "Approved")}}
                  <span
                    class="badge rounded-pill bg-success-subtle text-success px-3 border border-success-subtle"
                  >Aprovado</span>
                {{else if (eq this.status "Rejected")}}
                  <span
                    class="badge rounded-pill bg-danger-subtle text-danger px-3 border border-danger-subtle"
                  >Rejeitado</span>
                {{/if}}
              </td>
              <td class="text-end pe-4">
                <div class="btn-group shadow-sm">
                  <a
                    href="/budgets/edit/{{this.id}}"
                    class="btn btn-sm btn-outline-secondary"
                    title="Ver Detalhes"
                  >
                    <i class="bi bi-pencil"></i>
                  </a>
                  {{!-- <button
                    class="btn btn-sm btn-outline-secondary"
                    title="Editar"
                  >
                    <i class="bi bi-pencil"></i> --}}
                  </button>
                </div>
              </td>
            </tr>
          {{else}}
            <tr>
              <td colspan="5" class="py-5 text-center text-muted">
                <i class="bi bi-clipboard-x fs-1 d-block mb-3 opacity-25"></i>
                Não foram encontrados orçamentos recentes na base de dados.
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
    <div class="card-footer bg-white border-top py-3 text-center">
      <a
        href="/budgets"
        class="btn btn-link btn-sm text-decoration-none text-primary fw-semibold"
      >
        Ver todos os orçamentos
        <i class="bi bi-arrow-right ms-1"></i>
      </a>
    </div>
  </div>
</div>