<!-- Estilos específicos para a edição -->
<style>
    .card { border-radius: 12px; }
    .table-hover tbody tr:hover { background-color: rgba(13, 110, 253, 0.03); }
    .input-group-text { background-color: #f8f9fa; }
</style>

<div class="container-fluid py-3">
    <form action="/budgets/update/{{budget.id}}" method="POST" id="editBudgetForm">
        <!-- CABEÇALHO DA EDIÇÃO -->
        <div class="d-flex justify-content-between align-items-center mb-4 px-2">
            <div>
                <h4 class="text-primary fw-bold mb-0">Editar Orçamento #{{budget.id}}</h4>
                <p class="text-muted small mb-0">Atualize as informações e os itens conforme necessário.</p>
            </div>
            <div class="d-flex gap-2">
                <button type="button" class="btn btn-outline-secondary px-4" data-bs-dismiss="modal">Cancelar</button>
                <button type="submit" class="btn btn-primary px-4 shadow-sm">
                    <i class="bi bi-save me-2"></i>Salvar Alterações
                </button>
            </div>
        </div>

        <div class="row g-4">
            <!-- DADOS DO CLIENTE -->
            <div class="col-lg-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label fw-bold small">Cliente / Empresa</label>
                                <input type="text" name="customerName" class="form-control" value="{{budget.customerName}}" required>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold small">E-mail de Contato</label>
                                <input type="email" name="customerEmail" class="form-control" value="{{budget.customerEmail}}">
                            </div>
                            <div class="col-md-4">
                                <label class="form-label fw-bold small">Data de Emissão</label>
                                <input type="date" name="issueDate" id="edit_issueDate" class="form-control" value="{{budget.issueDate}}" required>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label fw-bold small">Dias de Validade (Recalcular)</label>
                                <select name="expiryDays" class="form-select">
                                    <option value="7">7 dias</option>
                                    <option value="15" selected>15 dias</option>
                                    <option value="30">30 dias</option>
                                    <option value="60">60 dias</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label fw-bold small">Estado Atual</label>
                                <select name="status" class="form-select fw-bold">
                                    <option value="Pending" {{#if (eq budget.status "Pending")}}selected{{/if}}>Pendente</option>
                                    <option value="Approved" {{#if (eq budget.status "Approved")}}selected{{/if}}>Aprovado</option>
                                    <option value="Rejected" {{#if (eq budget.status "Rejected")}}selected{{/if}}>Rejeitado</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- TABELA DE ITENS -->
            <div class="col-lg-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                        <h6 class="mb-0 fw-bold"><i class="bi bi-list-ul me-2"></i>Itens do Orçamento</h6>
                        <button type="button" class="btn btn-sm btn-success" id="btn-edit-add-item">
                            <i class="bi bi-plus-lg"></i> Adicionar Item
                        </button>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0" id="edit-items-table">
                            <thead class="table-light">
                                <tr class="small text-uppercase">
                                    <th style="width: 15%" class="ps-3">Tipo</th>
                                    <th style="width: 40%">Descrição (Catálogo)</th>
                                    <th style="width: 10%">Qtd</th>
                                    <th style="width: 15%">Unitário (R$)</th>
                                    <th style="width: 15%">Subtotal</th>
                                    <th style="width: 5%"></th>
                                </tr>
                            </thead>
                            <tbody id="edit-items-body">
                                {{#each items}}
                                <tr class="item-row">
                                    <td class="ps-3">
                                        <select name="items[{{@index}}][itemType]" class="form-select form-select-sm input-type" readonly>
                                            <option value="Product" {{#if (eq this.itemType "Product")}}selected{{/if}}>Produto</option>
                                            <option value="Service" {{#if (eq this.itemType "Service")}}selected{{/if}}>Serviço</option>
                                        </select>
                                    </td>
                                    <td>
                                        <select name="items[{{@index}}][description]" class="form-select form-select-sm select-product" required>
                                            <option value="{{this.description}}" selected>{{this.description}}</option>
                                            {{#each ../products}}
                                            <option value="{{this.name}}" data-price="{{this.basePrice}}" data-type="{{this.itemType}}">{{this.name}}</option>
                                            {{/each}}
                                        </select>
                                    </td>
                                    <td>
                                        <input type="number" name="items[{{@index}}][quantity]" class="form-control form-control-sm input-qty text-center" value="{{this.quantity}}" min="1" required>
                                    </td>
                                    <td>
                                        <input type="number" step="0.01" name="items[{{@index}}][unitPrice]" class="form-control form-control-sm input-price text-end" value="{{this.unitPrice}}" required>
                                    </td>
                                    <td class="text-end fw-bold">
                                        <span class="row-subtotal">R$ 0,00</span>
                                    </td>
                                    <td class="text-center">
                                        <button type="button" class="btn btn-link text-danger p-0 btn-remove-row">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- OBSERVAÇÕES E TOTAL -->
            <div class="col-lg-8">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <label class="form-label fw-bold small">Observações Gerais</label>
                        <textarea name="notes" class="form-control" rows="5">{{budget.notes}}</textarea>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card border-0 shadow-sm bg-primary text-white">
                    <div class="card-body py-4 text-center">
                        <h6 class="text-uppercase small mb-2 opacity-75">Total Atualizado</h6>
                        <h2 class="fw-bold mb-0" id="edit-summary-total">R$ 0,00</h2>
                        <input type="hidden" name="totalAmount" id="edit-hidden-total" value="{{budget.totalAmount}}">
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<script>
(function() {
    "use strict";

    const container = document.getElementById('edit-items-body');
    const btnAdd = document.getElementById('btn-edit-add-item');
    const totalDisplay = document.getElementById('edit-summary-total');
    const hiddenTotal = document.getElementById('edit-hidden-total');
    
    // O rowCount deve começar após os itens já renderizados pelo Handlebars
    let rowCount = document.querySelectorAll('#edit-items-body .item-row').length;

    const formatBRL = (val) => val.toLocaleString('pt-BR', { style: 'currency', currency: 'BRL' });

    const calculate = () => {
        let total = 0;
        document.querySelectorAll('#edit-items-body .item-row').forEach(row => {
            const q = parseFloat(row.querySelector('.input-qty').value) || 0;
            const p = parseFloat(row.querySelector('.input-price').value) || 0;
            const sub = q * p;
            row.querySelector('.row-subtotal').textContent = formatBRL(sub);
            total += sub;
        });
        totalDisplay.textContent = formatBRL(total);
        hiddenTotal.value = total.toFixed(2);
    };

    const handleProductSelect = (e) => {
        if (e.target.classList.contains('select-product')) {
            const opt = e.target.options[e.target.selectedIndex];
            const row = e.target.closest('tr');
            const price = opt.getAttribute('data-price');
            const type = opt.getAttribute('data-type');
            
            if (price) row.querySelector('.input-price').value = price;
            if (type) row.querySelector('.input-type').value = type;
            calculate();
        }
    };

    if (btnAdd) {
        btnAdd.addEventListener('click', () => {
            const firstRow = document.querySelector('#edit-items-body .item-row');
            if (!firstRow) return;

            const newRow = firstRow.cloneNode(true);
            
            newRow.querySelectorAll('input, select').forEach(el => {
                const name = el.getAttribute('name');
                if (name) el.setAttribute('name', name.replace(/\[\d+\]/, '[' + rowCount + ']'));
                
                if (el.classList.contains('input-qty')) el.value = "1";
                else if (el.classList.contains('select-product')) el.selectedIndex = 0;
                else if (el.tagName === 'INPUT') el.value = "";
            });

            newRow.querySelector('.row-subtotal').textContent = "R$ 0,00";
            
            const btnDel = newRow.querySelector('.btn-remove-row');
            btnDel.disabled = false;
            btnDel.addEventListener('click', () => {
                newRow.remove();
                calculate();
            });

            container.appendChild(newRow);
            rowCount++;
            calculate();
        });
    }

    container.addEventListener('change', handleProductSelect);
    container.addEventListener('input', (e) => {
        if (e.target.classList.contains('input-qty') || e.target.classList.contains('input-price')) {
            calculate();
        }
    });

    // Delegar remoção para linhas existentes
    container.addEventListener('click', (e) => {
        const btn = e.target.closest('.btn-remove-row');
        if (btn) {
            if (document.querySelectorAll('#edit-items-body .item-row').length > 1) {
                btn.closest('tr').remove();
                calculate();
            }
        }
    });

    calculate();
})();
</script>