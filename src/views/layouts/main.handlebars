<html lang="pt-pt">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>BudgetMaster | Gestão de Orçamentos</title>

    <!-- Bootstrap 5 CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <!-- Bootstrap Icons -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css"
    />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <style>
      :root {
        --primary-color: #0d6efd;
        --bg-light: #f8f9fa;
      }

      body {
        font-family: "Inter", sans-serif;
        background-color: var(--bg-light);
        color: #333;
      }

      /* Estilos para a Navbar */
      .navbar-brand {
        font-weight: 700;
        letter-spacing: -0.5px;
      }

      .nav-link {
        font-weight: 500;
      }

      /* Classes de utilidade para impressão */
      @media print {
        .no-print {
          display: none !important;
        }
        body {
          background-color: white !important;
        }
        .container {
          max-width: 100% !important;
          width: 100% !important;
          margin: 0 !important;
          padding: 0 !important;
        }
        .card {
          border: none !important;
          shadow: none !important;
        }
      }

      /* Ajustes de Cards */
      .card {
        border-radius: 12px;
        border: 1px solid rgba(0, 0, 0, 0.05);
      }
    </style>
  </head>
  <body>

    <!-- BARRA DE NAVEGAÇÃO -->
    <nav
      class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm mb-4 no-print"
    >
      <div class="container">
        <a class="navbar-brand" href="/">
          <i class="bi bi-wallet2 me-2 text-primary"></i>BudgetMaster
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto align-items-center">
            <li class="nav-item">
              <a class="nav-link" href="/">
                <i class="bi bi-house-door me-1"></i>Início
              </a>
            </li>
            <!-- NOVO CAMINHO: Catálogo de Produtos e Serviços -->
            <li class="nav-item">
              <a class="nav-link" href="/products">
                <i class="bi bi-box-seam me-1"></i>Produtos
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/budgets">
                <i class="bi bi-file-earmark-text me-1"></i>Orçamentos
              </a>
            </li>
            <li class="nav-item">
              <a
                class="nav-link btn btn-primary btn-sm text-white px-3 ms-lg-3"
                href="/budgets/new"
              >
                <i class="bi bi-plus-lg me-1"></i>Novo Orçamento
              </a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- CONTEÚDO PRINCIPAL (Onde o Handlebars insere as outras views) -->
    <main>
      {{{body}}}
    </main>

    <!-- RODAPÉ -->
    <footer class="py-4 mt-5 border-top bg-white no-print">
      <div class="container text-center text-muted">
        <small>&copy; 2024 BudgetMaster - Sistema de Gestão de Produtos e
          Serviços</small>
      </div>
    </footer>

    <!-- Bootstrap 5 JS Bundle -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
    ></script>
  </body>
</html>